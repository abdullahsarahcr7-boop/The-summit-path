    <script>
        const API_KEY = "";
        const API_URL = "https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-05-20:generateContent?key=" + API_KEY;

        const generateDescription = async (projectName, elementId) => {
            const descriptionElement = document.getElementById(elementId);
            const originalText = descriptionElement.innerText;
            descriptionElement.innerText = 'جاري توليد وصف...';

            const userPrompt = `اكتب وصفًا إبداعيًا ومقنعًا وموجزًا لمشروع تصميم جرافيك بعنوان "${projectName}". اجعل الوصف احترافيًا ومناسبًا لمعرض أعمال. اجعل الوصف باللغة العربية.`;
            const payload = {
                contents: [{ parts: [{ text: userPrompt }] }],
                systemInstruction: {
                    parts: [{ text: "أنت مساعد ذكاء اصطناعي محترف في كتابة المحتوى الإبداعي والتسويقي للمشاريع الفنية." }]
                }
            };

            try {
                const response = await fetch(API_URL, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();
                const generatedText = result?.candidates?.[0]?.content?.parts?.[0]?.text;
                
                if (generatedText) {
                    descriptionElement.innerText = generatedText;
                } else {
                    descriptionElement.innerText = 'تعذر توليد الوصف. الرجاء المحاولة مرة أخرى.';
                }
            } catch (error) {
                console.error('API Error:', error);
                descriptionElement.innerText = 'حدث خطأ. الرجاء المحاولة مرة أخرى.';
            }
        };
    </script>
